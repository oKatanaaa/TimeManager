<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coordinatorLayout"
        android:background="#FFFFFF">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:id="@+id/constraintLayout2"
            android:background="#0d72ff">

        <Button
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelBtn"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/add_event_btn_look"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:onClick="onClickedCancel" android:layout_marginLeft="8dp"/>
        <Button
                android:text="@string/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doneBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/add_event_btn_look"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:onClick="onClickedDone" android:layout_marginRight="8dp"/>
        <TextView
                android:text="Edited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editedNameTxt"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/doneBtn"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/cancelBtn"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintVertical_bias="0.421"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>
    </android.support.constraint.ConstraintLayout>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editedValueTxt"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="top"/>
</android.support.constraint.ConstraintLayout>