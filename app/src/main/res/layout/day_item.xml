<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/day_item_look"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/dayItemLayout">

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/eventNameTxt"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="sdsd"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/eventColor" android:layout_marginRight="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startTimeLbl"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endTimeLbl"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/startTimeLbl"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginRight="8dp"/>
        <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp" app:srcCompat="@drawable/color_circle"
                android:id="@+id/eventColor"
                app:layout_constraintEnd_toStartOf="@+id/startTimeLbl" android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp" android:layout_marginTop="1dp"
                app:layout_constraintTop_toTopOf="@+id/startTimeLbl" android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.148"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>